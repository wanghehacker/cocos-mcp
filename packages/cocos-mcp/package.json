{
  "package_version": 2,
  "name": "cocos-mcp",
  "version": "0.1.0",
  "description": "MCP bridge for Cocos Creator 3.8.x",
  "author": "cocos-mcp contributors",
  "editor": ">=3.8.0",
  "main": "./dist/main.js",
  "panels": {
    "default": {
      "title": "MCP Bridge",
      "type": "dockable",
      "main": "./dist/panels/default",
      "size": {
        "min-width": 250,
        "min-height": 200,
        "width": 300,
        "height": 250
      }
    }
  },
  "contributions": {
    "scene": {
      "script": "./dist/scene.js"
    },
    "messages": {
      "cocos-mcp:start": {
        "public": true,
        "description": "Start the MCP TCP bridge server",
        "methods": ["start"]
      },
      "cocos-mcp:stop": {
        "public": true,
        "description": "Stop the MCP TCP bridge server",
        "methods": ["stop"]
      },
      "cocos-mcp:open-panel": {
        "public": true,
        "description": "Open MCP Bridge panel",
        "methods": ["openPanel"]
      },
      "cocos-mcp:query-status": {
        "public": true,
        "description": "Query MCP bridge status",
        "methods": ["queryStatus"]
      }
    },
    "menu": [
      {
        "path": "i18n:menu.extension",
        "label": "MCP Bridge",
        "message": "cocos-mcp:open-panel"
      }
    ]
  }
}
